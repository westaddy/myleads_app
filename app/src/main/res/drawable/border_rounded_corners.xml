<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list >
            <item
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp">
                <shape android:shape="rectangle" >
                    <stroke
                        android:width="0.5dp"
                        android:color="#dddddd" />

                    <solid android:color="#00FFFFFF" />

                    <padding
                        android:left="20dp"
                        android:top="15dp"
                        android:right="20dp"
                        android:bottom="15dp" />
                </shape>
            </item>

        </layer-list>
    </item>

</selector>